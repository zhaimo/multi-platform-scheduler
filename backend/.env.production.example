# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=video_scheduler
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# JWT Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-video-scheduler-bucket

# Encryption
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# Platform API Keys (OAuth)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth Redirect URLs
OAUTH_REDIRECT_BASE_URL=https://your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Video Scheduler

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Environment
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload Limits
MAX_UPLOAD_SIZE_MB=500

# Celery Configuration
CELERY_BROKER_URL=redis://:your_secure_redis_password_here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password_here@redis:6379/0

# Database URL
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_postgres_password_here@postgres:5432/video_scheduler
